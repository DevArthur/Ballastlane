@model Ballastlane.Data.Models.Entities.Product

@{
    ViewData["Title"] = "DeleteView";
}

<h1>Delete a new product</h1>
<br />
<h4>Are you sure you want to delete this?</h4>

<div class="col-4">
    <div class="row">
        <div class="container">
            <form asp-action="Delete" asp-controller="Product">
                @Html.Label("Product Id")
                @Html.TextBoxFor(x => x.Id)
                <input type="submit" value="Find" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>